# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Cloudflare RealtimeKit Configuration
CLOUDFLARE_REALTIME_ORG_ID=your_realtime_org_id_here
CLOUDFLARE_REALTIME_API_KEY=your_realtime_api_key_here

# Chat 
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Movies on Demand Configuration
TMDB_API_KEY=your_tmdb_api_key_here
NZBGEEK_API_KEY=your_nzbgeek_api_key_here

# Movies on Demand - Cloudflare Zero Trust Service Token
# Used by containers to authenticate callbacks to internal API endpoints
# Create at: Zero Trust Dashboard → Access → Service Auth → Service Tokens
CONTAINER_SERVICE_TOKEN_ID=your_service_token_client_id_here
CONTAINER_SERVICE_TOKEN_SECRET=your_service_token_client_secret_here

# Movies on Demand - Usenet Server Credentials
USENET_HOST=news.your-usenet-provider.com
USENET_PORT=563
USENET_USERNAME=your_usenet_username_here
USENET_PASSWORD=your_usenet_password_here
USENET_CONNECTIONS=10
USENET_ENCRYPTION=true

# Movies on Demand - R2 API Credentials
# Used by containers to upload files directly to R2 via S3 API
# Create at: Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
