{
    "name": "bahasadri-com",
    "version": "0.1.0",
    "private": true,
    "packageManager": "pnpm@8.8.0",
    "scripts": {
        "frontend:dev": "pnpm --filter frontend dev",
        "frontend:build": "pnpm --filter frontend build",
        "frontend:preview": "pnpm --filter frontend preview",
        "frontend:lint": "pnpm --filter frontend lint",
        "frontend:typecheck": "pnpm --filter frontend typecheck",
        "frontend:deploy": "pnpm --filter frontend run deploy",
        "backend:dev": "pnpm --filter backend dev",
        "backend:lint": "pnpm --filter backend lint",
        "backend:typecheck": "pnpm --filter backend typecheck",
        "backend:deploy": "pnpm --filter backend run deploy",
        "typecheck": "pnpm frontend:typecheck && pnpm backend:typecheck",
        "api:lint": "spectral lint \"docs/features/**/*.yml\" --fail-severity info",
        "lint": "pnpm api:lint && pnpm frontend:lint && pnpm backend:lint",
        "deploy": "pnpm frontend:deploy && pnpm backend:deploy"
    },
    "devDependencies": {
        "@stoplight/spectral-cli": "^6.15.0"
    }
}
