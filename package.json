{
    "name": "bahasadri-com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
        "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
        "test": "vitest run --config vitest.config.ts",
        "test:watch": "vitest watch --config vitest.config.ts",
        "sms:smoke": "ts-node --transpile-only scripts/send-test-sms.ts",
        "sync:cloudflare-secrets": "ts-node --transpile-only scripts/sync-cloudflare-secrets.ts",
        "sync:twilio-webhook": "ts-node --transpile-only scripts/sync-twilio-webhook.ts",
        "deploy": "pnpm sync:cloudflare-secrets && pnpm sync:twilio-webhook && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
    },
    "dependencies": {
        "next": "^15.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "twilio": "^5.10.6"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.10.10",
        "@cloudflare/workers-types": "^4.20251121.0",
        "@opennextjs/cloudflare": "^1.13.1",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.6",
        "@types/react-dom": "^19.2.3",
        "dotenv": "^17.2.3",
        "eslint": "^9.11.1",
        "eslint-config-next": "^15.0.1",
        "miniflare": "^4.20251118.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.12",
        "wrangler": "^4.50.0"
    }
}
