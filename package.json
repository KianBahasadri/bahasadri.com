{
    "name": "bahasadri-com",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
        "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
        "test": "vitest run --config vitest.config.ts",
        "test:watch": "vitest watch --config vitest.config.ts",
        "sms:smoke": "ts-node --transpile-only scripts/send-test-sms.ts",
        "sync:twilio-webhook": "ts-node --transpile-only scripts/sync-twilio-webhook.ts",
        "deploy": "pnpm sync:twilio-webhook && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
        "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
    },
    "dependencies": {
        "next": "^16.0.3",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "twilio": "^5.10.6"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.5.13",
        "@cloudflare/workers-types": "^4.20251120.0",
        "@opennextjs/cloudflare": "^1.12.0",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.6",
        "@types/react-dom": "^19.2.3",
        "eslint": "^9.39.1",
        "eslint-config-next": "^16.0.3",
        "miniflare": "^3.20250312.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^2.1.8",
        "wrangler": "^4.47.0"
    }
}
